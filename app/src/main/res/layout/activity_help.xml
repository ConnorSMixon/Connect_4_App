<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/confused"
        android:text="@string/confused"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="410dp"
        android:layout_height="166dp"
        android:layout_margin="90dp"
        android:layout_marginTop="72dp"
        android:alpha="1"
        android:visibility="invisible"
        android:text="@string/help_instructions"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="215dp"
        android:layout_height="25dp"
        android:text="@string/help_prompt"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="66dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="90"
        app:layout_constraintRight_toRightOf="90"
        app:layout_constraintTop_toTopOf="90"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="69dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.637"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>