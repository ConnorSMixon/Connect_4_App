<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/fragment_layout"
    android:padding="7dp"
    tools:context=".fragments.PauseFragment">

    <ImageView
        android:id="@+id/music_image_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/volume_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkbox_music"
        app:layout_constraintStart_toStartOf="@id/checkbox_music"
        app:layout_constraintEnd_toEndOf="@id/checkbox_music"
        app:layout_constraintVertical_bias=".9"/>
    <CheckBox
        android:id="@+id/checkbox_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:scaleX="2"
        android:scaleY="2"
        android:checked="true"
        android:buttonTint="@color/theme3.white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias=".2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sfx"
        android:fontFamily="@font/chopsic"
        android:padding="7dp"
        app:layout_constraintBottom_toTopOf="@id/checkbox_sfx"
        app:layout_constraintStart_toStartOf="@id/checkbox_sfx"
        app:layout_constraintEnd_toEndOf="@id/checkbox_sfx" />
    <CheckBox
        android:id="@+id/checkbox_sfx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:scaleX="2"
        android:scaleY="2"
        android:checked="true"
        android:buttonTint="@color/theme3.white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias=".8"/>
</androidx.constraintlayout.widget.ConstraintLayout>

