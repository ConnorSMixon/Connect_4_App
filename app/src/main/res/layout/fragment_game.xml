<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:clickable="true"
    android:focusable="true">

    <ImageButton
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/refresh" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/pause" />

    <ImageButton
        android:id="@+id/gameActivityBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/arrow_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_button"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/winner_text"
        android:textSize="40sp"
        android:fontFamily="@font/chopsic"
        android:gravity="center_horizontal"
        android:text="@string/winner_message"/>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/game_board"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/reset_button"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".Fragments.GameFragment">

        <include layout="@layout/piece_row" />

        <include layout="@layout/piece_row" />

        <include layout="@layout/piece_row" />

        <include layout="@layout/piece_row" />

        <include layout="@layout/piece_row" />

        <include layout="@layout/piece_row" />
    </LinearLayout>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/game_board_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset_button"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".Fragments.GameFragment">

        <include layout="@layout/row_board_top" />

        <include layout="@layout/row_board_middle" />

        <include layout="@layout/row_board_middle" />

        <include layout="@layout/row_board_middle" />

        <include layout="@layout/row_board_middle" />

        <include layout="@layout/row_board_bottom" />
    </LinearLayout>

    <ImageView
        android:id="@+id/indicator_divider"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/turn_indicator_image_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/indicator_piece1"
        android:layout_alignStart="@id/indicator_piece1"
        android:layout_alignEnd="@id/indicator_piece1"
        android:src="@drawable/arrow_indicator" />

    <ImageView
        android:id="@+id/indicator_piece1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/piece_red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@id/indicator_divider"
        android:layout_toEndOf="@id/indicator_piece1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/chopsic"
        android:text="@string/player_1"
        android:textAlignment="center"
        android:textColor="@color/theme2.black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/turn_indicator_image_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/indicator_piece2"
        android:layout_alignStart="@id/indicator_piece2"
        android:layout_alignEnd="@id/indicator_piece2"
        android:src="@drawable/arrow_indicator" />

    <ImageView
        android:id="@+id/indicator_piece2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/piece_red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/indicator_piece2"
        android:layout_toEndOf="@id/indicator_divider"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/chopsic"
        android:text="@string/player_2"
        android:textAlignment="center"
        android:textColor="@color/theme2.black"
        android:textSize="25sp" />

</RelativeLayout>
