<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartFragment"
    android:theme="@style/Theme.Connect4Application"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/connect_4_logo"
        android:fontFamily="@font/chopsic"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_margin="10dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/button_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        />

    <ImageButton
        android:id="@+id/options_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_settings"
        app:layout_constraintEnd_toStartOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@+id/play_button" />

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_help"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        app:layout_constraintStart_toEndOf="@id/play_button" />

</androidx.constraintlayout.widget.ConstraintLayout>